<Window x:Class="PopUpDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PopUpDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="198" Width="545" WindowStartupLocation="CenterScreen">
	<Grid>
		<StackPanel Orientation="Vertical" Margin="10">
			<Button Content="Hier klicken für Begrüßung" Command="{Binding GetGreetingCmd}" Width="200" Height="30"/>
			<Label Content="{Binding Greeting}" Margin="10" FontSize="30" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>
